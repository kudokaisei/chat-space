.Chat-main
  
  .group-info
    .header 
      .header__group-name
        = @group.name
      %ul.header__member 
        Member : 
        %li.header__member__list 
          - @group.users.each do |user|
            = user.name
    = link_to edit_group_path(@group.id), class: "group-info__edit" do
      Edit

  .message-zone
    = render @messages

  .Form
    = form_with model: [@group, @message], html: {class: "form"}, local: true do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('far', 'image', class: 'input-box__image__icon')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit'